{
  "name": "backend",
  "version": "1.0.0",
  "description": "Node, TS and Express project boilerplate",
  "main": "server.ts",
  "scripts": {
    "start": "cd build && node index.js",
    "lint-watch": "esw --watch src .eslintrc.js",
    "dev": "set NODE_ENV=development && nodemon index.ts",
    "dev-prod": "set NODE_ENV=production && nodemon index.ts",
    "postbuild": "rm -rf ./build/.env && cp prod.env ./build/.env && cp ./src/bootstrap/certificate.crt ./build/src/bootstrap/certificate.crt",
    "build": "tsc && tsc-alias"
  },
  "author": "Bipin Thapa",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.3",
    "@types/papaparse": "^5.3.14",
    "@types/unzipper": "^0.10.9",
    "eslint": "^8.54.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-csv": "^4.3.6",
    "fs": "^0.0.1-security",
    "morgan": "^1.10.0",
    "papaparse": "^5.4.1",
    "pg": "^8.11.3",
    "puppeteer": "^21.6.1",
    "tsc-alias": "^1.8.8",
    "typeorm": "^0.3.17",
    "unzipper": "^0.10.14",
    "xml2js": "^0.6.2",
    "yup": "^1.3.2"
  }
}
